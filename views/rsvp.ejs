<!DOCTYPE html>
<html>
<% include templates/head %>
<body>
    <% include templates/nav %>

    <div class="container">
      <div align="center">
          <form action="home.html">

            <!-- Name Field -->
              <div class="mdc-text-field mdc-text-field--outlined rsvp-field name">
                  <input class="mdc-text-field__input" id="name-input">
                  <div class="mdc-notched-outline">
                      <div class="mdc-notched-outline__leading"></div>
                      <div class="mdc-notched-outline__notch">
                          <label class="mdc-floating-label">Name</label>
                      </div>
                      <div class="mdc-notched-outline__trailing"></div>
                  </div>
              </div>

              <br>
              <!-- Attending Checkbox -->
              <div class="mdc-form-field rsvp-field">
                <div class="mdc-checkbox">
                  <input type="checkbox" class="mdc-checkbox__native-control" id="attending-checkbox"/>
                  <div class="mdc-checkbox__background">
                    <svg class="mdc-checkbox__checkmark" viewBox="0 0 24 24">
                      <path class="mdc-checkbox__checkmark-path" fill="none" d="M1.73,12.91 8.1,19.28 22.79,4.59"/>
                    </svg>
                    <div class="mdc-checkbox__mixedmark"></div>
                  </div>
                </div>
                <label for="attending-checkbox">Attending?</label>
              </div>

              <br>
              <!-- Number in Party -->
              <div class="mdc-text-field mdc-text-field--outlined rsvp-field party-num">
                  <input class="mdc-text-field__input" id="party-num">
                  <div class="mdc-notched-outline">
                      <div class="mdc-notched-outline__leading"></div>
                      <div class="mdc-notched-outline__notch">
                          <label class="mdc-floating-label">How many will be in your party?</label>
                      </div>
                      <div class="mdc-notched-outline__trailing"></div>
                  </div>
              </div>

              <br>
              <!-- Food Choices -->
              <div class="mdc-form-field rsvp-field food-choice-1">
                <div class="mdc-radio">
                  <input class="mdc-radio__native-control" type="radio" id="food-choice" name="radios" checked>
                  <div class="mdc-radio__background">
                    <div class="mdc-radio__outer-circle"></div>
                    <div class="mdc-radio__inner-circle"></div>
                  </div>
                </div>
                <label for="food-choice">Food 1</label>
              </div>

              <div class="mdc-form-field rsvp-field food-choice-2">
                <div class="mdc-radio">
                  <input class="mdc-radio__native-control" type="radio" id="food-choice-2" name="radios">
                  <div class="mdc-radio__background">
                    <div class="mdc-radio__outer-circle"></div>
                    <div class="mdc-radio__inner-circle"></div>
                  </div>
                </div>
                <label for="food-choice-2">Food 2</label>
              </div>

              <div class="button-container">
                  <button type="button" class="mdc-button cancel">
                      <span class="mdc-button__label">
                          Cancel
                      </span>
                  </button>
                  <button class="mdc-button mdc-button--raised next">
                      <span class="mdc-button__label">
                          Next
                      </span>
                  </button>
              </div>
          </form>

          <h4><i>Please RSVP by May 1st</i></h4>
      </div>
        <% include templates/footer %>
    </div>
    <script src="https://unpkg.com/material-components-web/dist/material-components-web.min.js"></script>
    <script src="/scripts/rsvp.js"></script>
</body>
</html>
